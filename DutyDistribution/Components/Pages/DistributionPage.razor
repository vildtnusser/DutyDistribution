@page "/"
@inherits DistributionPageBase;
@rendermode InteractiveServer
@inject ILogger<Counter> Logger

<PageTitle>DistributionPage</PageTitle>

<h1> Distribute duties</h1>
<button class="btn btn-primary" @onclick="@(() =>
                                          {
                                              Logger.LogInformation(1,nameTextField);
                                              DistributeDuties();
                                          })">Distribute</button>
<h2>Person 1</h2>
<ul>
    <li>Coffee</li>
    <li>Tea</li>
    <li>Milk</li>
</ul>

<hr style="width:100%;text-align:left;margin-left:0">
<h2>Person 2</h2>
<ul>
    <li>Coffee</li>
    <li>Tea</li>
    <li>Milk</li>
</ul>

<hr style="width:100%;text-align:left;margin-left:0">
<h1>Duty overview</h1>

<h3> Duty name:</h3> 
<input class = "input-textbox" @bind="@nameTextField" @oninput="(e)=> { nameTextField = e.Value ==null? string.Empty:(string)e.Value; }" />
<button class="btn btn-primary" style="float:right" @onclick="@(() =>
                                          {
                                              Logger.LogInformation(1,nameTextField);
                                              models.Add(nameTextField);
                                          })">
    Add new duty
</button>
<table style="width:100%">
    <tr>
        <th>Name</th>
        <th>Command</th>
    </tr>
    @foreach(var model in models)
    {
        <tr>
            <td>@model</td>
            <td>
                <button class="btn-primary-negative" @onclick="() => models.Remove(model)">
                    Delete
                </button>
            </td>
        </tr>
    }

</table>






