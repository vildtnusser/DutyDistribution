@page "/"
@using System.ComponentModel
@inherits DistributionPageBase;
@rendermode InteractiveServer


<PageTitle>DistributionPage</PageTitle>

<h1> Distribute duties</h1>
<button class="btn btn-primary" @onclick="@(() =>
                                                             {
                                                                 @show = !show;
                                                             })">Distribute</button>
<h2>Person 1</h2>
<ul>
    @foreach(var duty in DistributeDuties(models, show).Item1)
    {
            <li>@duty</li>
    }
</ul>

<hr style="width:100%;text-align:left;margin-left:0">
<h2>Person 2</h2>
<ul>
    @foreach(var duty in DistributeDuties(models, show).Item2)
    {
        <li>@duty</li>
    }
</ul>

<hr style="width:100%;text-align:left;margin-left:0">
<h1>Duty overview</h1>

<h3> Duty name:</h3> 
<input class = "input-textbox" @bind="@nameTextField" @oninput="(e)=> { nameTextField = e.Value ==null? string.Empty:(string)e.Value; }" />
<button class="btn btn-primary" @onclick="@(() =>
                                          {
                                              if (!models.Contains(nameTextField))
                                              {
                                                  models.Add(nameTextField);
                                              }

                                              nameTextField = "";

                                          })">
    Add new duty
</button>
<table style="width:100%">
    <tr>
        <th>Duty</th>
        <th>Deleting</th>
    </tr>
    @foreach(var model in models)
    {
        <tr>
            <td>@model</td>
            <td>
                <button class="btn-primary-negative" @onclick="() => models.Remove(model)">
                    Delete
                </button>
            </td>
        </tr>
    }

</table>






